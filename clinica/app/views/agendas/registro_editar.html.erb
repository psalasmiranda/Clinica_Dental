<script>
  $(document).on("ready", function(){
    $('.pieza').on("click", function(){
      var id = $(this).attr("id");
      if($.data(this,"seleccionado")== "no"){
        $(this).attr("src", "/assets/diente"+id+".jpg");
        $.data(this,"seleccionado","si");
      }else{
        $(this).attr("src", "/assets/"+"S"+"diente"+id+".jpg");
        $.data(this,"seleccionado","no");
      }
    })
  })
</script>
