<%= stylesheet_link_tag "agenda_paso.css" %>
<%= javascript_include_tag "agenda_paso", "data-turbolinks-track" => true  %>

<%= content_tag :div, class: "temp_information", data: {temp: @number} do %>
<% end %>
<div class="container">

<div class="stepwizard col-md-offset-1">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
        <p>Paso 1</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
        <p>Paso 2</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
        <p>Paso 3</p>
      </div>
    </div>
  </div>

  <%= form_for(@agenda, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
    <div class="row setup-content" id="step-1">
      <div class="col-xs-6 col-md-offset-1">
        <div class="col-md-12">
          <h3>Datos del paciente</h3>
          <div class="form-group">
            <label class="control-label">Rut del paciente</label>
            <%= f.collection_select :paciente_id, Paciente.all, :id, :rut, {include_blank: 'Por favor selecciona un paciente'}, {class: 'form-control'}%>
          </div>
          <button id ="rut" class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Siguiente</button>
        </div>
      </div>
    </div>
    <div class="row setup-content" id="step-2">
      <div class="col-xs-6 col-md-offset-1">
        <div class="col-md-12">
          <h3>Datos del doctor</h3>
          <div class="form-group">
            <label class="control-label">Doctor</label>
            <%= f.collection_select :usuario_id, Usuario.all, :id, :nombre, {include_blank: 'Por favor selecciona un doctor'}, {class: 'form-control'}%>
            <label class="control-label">Consulta</label>
            <%= f.collection_select :usuario_id, Tratamiento.all, :id, :nombre, {include_blank: 'Por favor selecciona un tratamiento'}, {class: 'form-control'}%>
          </div>
          <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Siguiente</button>
        </div>
      </div>
    </div>
    <div class="row setup-content" id="step-3">
      <div class="col-xs-6 col-md-offset-1">
        <div class="col-md-12">
          <h3> Tomar hora</h3>
          <div class="form-group<%= @agenda.errors[:hora].any? ? " has-error" : "" %>">
            <%= f.label :Fecha , class:'col-sm-2 control-label'%>
          <div class="col-sm-8">
            <%= f.date_field :fecha , class:'form-control'%>
            <span class="help-inline">
             <%= @agenda.errors[:costo].any? ? @agenda.errors[:hora].to_s[/\w([^"]*)/] : "" %></span>
          </div>
          </div>

          <div id="reserva" >
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Hora</th>
                    <th>Reserva</th>
                  </tr>
                </thead>
                <tbody>
                  <% @horas.each do |a| %>
                    <tr >
                       <td><%= a.bloque %></td>
                       <td><button class="btn btn-primary disabled" type="submit" >Reservado</button></td>
                     </tr>
                 <%end%>
                </tbody>
              </table>
            </div>

      </div>
    </div>
  <% end %>

</div>
