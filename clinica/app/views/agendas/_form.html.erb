<%= form_for(@agenda, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
    <% if @agenda.errors.any? %>
        <%= pluralize(@agenda.errors.count, "error") %>

        <% @agenda.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= f.label :costo, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :costo , class:'form-control'%>
      </div>
      </div>
      <div class="form-group">
        <%= f.label :hora , class:'col-sm-2 control-label'%>
      <div class="col-sm-5">
        <%= f.date_field :hora , class:'form-control'%>
      </div>
      <div class="col-sm-5">
        <%= f.time_field :hora , class:'form-control'%>
      </div>
      </div>
      <div class="col-sm-2 col-sm-offset-5">
        <%= f.submit boton, class:'btn btn-primary' %>
      </div>
    </div>
<% end %>
