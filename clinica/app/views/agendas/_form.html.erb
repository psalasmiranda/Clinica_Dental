<%= form_for(@agenda, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group<%= @agenda.errors[:costo].any? ? " has-error" : "" %>">
        <%= f.label :costo, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :costo , class:'form-control'%>
        <span class="help-inline">
         <%= @agenda.errors[:costo].any? ? @agenda.errors[:costo].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group<%= @agenda.errors[:hora].any? ? " has-error" : "" %>">
        <%= f.label :hora , class:'col-sm-2 control-label'%>
      <div class="col-sm-5">
        <%= f.date_field :hora , class:'form-control'%>
        <span class="help-inline">
         <%= @agenda.errors[:costo].any? ? @agenda.errors[:hora].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      <div class="col-sm-5">
        <%= f.time_field :hora , class:'form-control'%>
        <span class="help-inline">
         <%= @agenda.errors[:costo].any? ? @agenda.errors[:hora].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group text-center">
      <% if @agenda.errors.any? %>
          <%= pluralize(@agenda.errors.count, "error") %>
      <% end %>
    </div>
      <div class="col-sm-2 col-sm-offset-5">
        <%= f.submit boton, class:'btn btn-primary' %>
      </div>
    </div>
      </div>

<% end %>
