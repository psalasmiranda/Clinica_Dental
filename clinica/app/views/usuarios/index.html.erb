
<table class="table">

<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Personal</font>
  </a>
  <td></td>




  <tr>
    <th class="text-center">Nombre</td>
    <th class="text-center">Apellido</td>
    <th class="text-center">Cargo</td>
    <th class="text-center">Horario Entrada</td>
    <th class="text-center">Horario Salida</td>
  </tr>
   <% @usuarios.each do |a| %>

  <tr >
        <td align= center><%= a.nombre%></td>
        <td align= center><%= a.ape_paterno%></td>
        <td align= center><%= a.cargo %></td>
        <td align= center><%= a.hora_entrada.strftime('%R') %></td>
        <td align= center><%= a.hora_salida.strftime('%R') %></td>
        <td><%= button_to 'Detalles' ,usuario_url(a), :class => "btn btn-primary" %></td>
        <td> <%= button_to 'Editar', editar_usuario_url(a), :class => "btn btn-primary" %></td>
        <td><%= button_to a, :class => "btn btn-danger", method: :delete, data: {confirm: 'Desea Continuar'} do %>
              <span class="glyphicon glyphicon-trash"></span>
          <% end %></td>

      </tr>
  <%end%>
</div>
</table>
