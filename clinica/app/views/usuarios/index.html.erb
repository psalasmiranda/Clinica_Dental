<table class="table">
<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Personal</font>
  </a>
  <tr>
    <td align= center>Nombre</td>
    <td align= center>Cargo</td>
    <td align= center>Horario_Entrada</td>
    <td align= center>Horario_Salida</td>
  </tr>
   <% @usuarios.each do |a| %>

  <tr >+
        <td align= center><%= a.nombre && a.ape_paterno%></td>
        <td align= center><%= a.cargo %></td>
        <td align= center><%= a.hora_entrada %></td>
        <td align= center><%= a.hora_salida %></td>
        <td><%= button_to 'Detalles' ,usuario_url(a), :class => "btn btn-primary" %></td>
        <td> <%= button_to 'Editar', editar_usuario_url(a), :class => "btn btn-primary" %></td>
        <td><%= button_to a, :class => "btn btn-danger", method: :delete, data: {confirm: 'Desea Continuar'} do %>
              <span class="glyphicon glyphicon-trash"></span>
          <% end %></td>

      </tr>
  <%end%>
</div>
</table>
<%= paginate @usuarios %>
