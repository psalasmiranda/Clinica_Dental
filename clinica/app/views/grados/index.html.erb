<table class="table">
<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Permisos</font>
  </a>

<tr>
  <td align= center> Tipo Permiso</td>

</tr>
    <% @grados.each do |a| %>
        <tr>
          <td align= center><%= a.rol%></td>
          <td><%= button_to 'Mostrar' ,grado_url(a), :class => "btn btn-primary" %></td>
          <td> <%= button_to 'Editar', editar_grado_url(a), :class => "btn btn-primary" %></td>
          <td><%= button_to a, :class => "btn btn-primary", method: :delete, data: {confirm: 'Desea Continuar'} do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %></td>

        </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @grados %>
