
  <%= form_for(@proveedor, :html => {:role => 'form'}) do |f| %>
      <% if @proveedor.errors.any? %>
          <%= pluralize(@proveedor.errors.count, "error") %>

          <% @proveedor.errors.full_messages.each do |actual| %>
              <%= actual %>
          <% end %>
      <% end %>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
      <%= f.label :rut %>
      <%= f.text_field :rut %>
      <%= f.label :correo %>
      <%= f.text_field :correo %>
      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
      <%= f.label :direccion %>
      <%= f.text_field :direccion %>
      <%= f.submit %>
  <% end %>
