<h1 class="text-center">Iniciar sesión</h1>
  <%= form_tag(sessions_path, {class: 'form-horizontal'})  do %>
  <div class="col-md-6 col-md-offset-3">
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= label_tag "",:Nombre , class:'control-label'%>
    </div>
    <div class="col-sm-10">
    <%= text_field_tag :nombre, params[:nombre] , class:'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= label_tag "", :Contraseña , class:'control-label' %>
    </div>
    <div class="col-sm-10">
    <%= password_field_tag :password, "" , class:'form-control'%>
    </div>
  </div>
  <div class="col-sm-2 col-sm-offset-5">
    <%= submit_tag "Iniciar sesión", class:'btn btn-default' %>
  </div>
</div>
<% end %>
