
  <%= form_for(@personal, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
      <% if @personal.errors.any? %>
          <%= pluralize(@personal.errors.count, "error") %>

          <% @personal.errors.full_messages.each do |actual| %>
              <%= actual %>
          <% end %>
      <% end %>
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <%= f.label :nombre, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :nombre , class:'form-control'%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :apellidos, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :apellidos , class:'form-control'%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :telefono, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :telefono , class:'form-control'%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :rut, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :rut, class:'form-control' %>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :edad, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :edad , class:'form-control'%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :correo, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :correo , class:'form-control'%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :contraseña, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :contraseña, class:'form-control' %>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :cargo, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cargo, class:'form-control', placeholder:'Cargo' %>
    </div>
    </div>
    <div class="col-sm-4 col-sm-offset-4">
      <%= f.submit boton, class:'btn btn-primary' %>
    </div>
  </div>
  <% end %>
