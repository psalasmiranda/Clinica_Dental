
  <%= form_for(@personal, :html => {:role => 'form'}) do |f| %>
      <% if @personal.errors.any? %>
          <%= pluralize(@personal.errors.count, "error") %>

          <% @personal.errors.full_messages.each do |actual| %>
              <%= actual %>
          <% end %>
      <% end %>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
      <%= f.label :apellidos %>
      <%= f.text_field :apellidos %>
      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
      <%= f.label :rut %>
      <%= f.text_field :rut %>
      <%= f.label :edad %>
      <%= f.text_field :edad %>
      <%= f.label :correo %>
      <%= f.text_field :correo %>
      <%= f.label :contraseña %>
      <%= f.text_field :contraseña %>
      <%= f.label :cargo %>
      <%= f.text_field :cargo %>
      <%= f.submit %>
  <% end %>
