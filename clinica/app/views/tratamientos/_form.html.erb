<%= form_for(@tratamiento, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
    <% if @tratamiento.errors.any? %>
        <%= pluralize(@tratamiento.errors.count, "error") %>
        <% @tratamiento.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= f.label :nombre, class:'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :nombre , class:'form-control'%>
      </div>
      </div>
      <div class="form-group">
        <%= f.label :descripcion, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :descripcion , class:'form-control'%>
      </div>
      </div>
      <div class="col-sm-2 col-sm-offset-5">
        <%= f.submit boton, class:'btn btn-primary' %>
      </div>
      </div>
<% end %>
