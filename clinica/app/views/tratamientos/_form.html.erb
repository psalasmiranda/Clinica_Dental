<%= form_for(@tratamiento, :html => {:role => 'form', class:'form-horizontal'}) do |f| %>
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group<%= @tratamiento.errors[:nombre].any? ? " has-error" : "" %>">
        <%= f.label :nombre, class:'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :nombre , class:'form-control'%>
        <span class="help-inline">
         <%= @tratamiento.errors[:nombre].any? ? @tratamiento.errors[:nombre].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group<%= @tratamiento.errors[:descripcion].any? ? " has-error" : "" %>">
        <%= f.label :descripcion, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :descripcion , class:'form-control'%>
        <span class="help-inline">
         <%= @tratamiento.errors[:descripcion].any? ? @tratamiento.errors[:descripcion].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group<%= @tratamiento.errors[:prevision].any? ? " has-error" : "" %>">
        <%= f.label :Prevision, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%=f.text_field :prevision , class:'form-control'%>
        <span class="help-inline">
         <%= @tratamiento.errors[:prevision].any? ? @tratamiento.errors[:prevision].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group<%= @tratamiento.errors[:costo].any? ? " has-error" : "" %>">
        <%= f.label :costo, class:'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :costo , class:'form-control'%>
        <span class="help-inline">
         <%= @tratamiento.errors[:costo].any? ? @tratamiento.errors[:costo].to_s[/\w([^"]*)/] : "" %></span>
      </div>
      </div>
      <div class="form-group text-center">
      <% if @tratamiento.errors.any? %>
          <%= pluralize(@tratamiento.errors.count, "error") %>
      <% end %>
    </div>
      <div class="col-sm-2 col-sm-offset-5">
        <%= f.submit boton, class:'btn btn-primary' %>
      </div>
      </div>
<% end %>
