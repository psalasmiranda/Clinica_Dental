<table class="table">
<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Tratamientos</font>
  </a>

<tr>
  <td align= center>Nombre Tratamiento </td>
  <td align= center>Previson</td>
  <td align= center>Costo</td>
  <td align= center>Descripcion</td>
</tr>

    <% @tratamientos.each do |a| %>
        <tr>
          <td align= center><%= a.nombre%></td>
          <td align= center><%= a.prevision%></td>
          <td align= center><%= a.costo%></td>
          <td align= center><%= a.descripcion%></td>
          <td> <%= button_to 'Editar', editar_tratamiento_url(a), :class => "btn btn-primary" %></td>
          <td><%= button_to a, :class => "btn btn-danger", method: :delete, data: {confirm: 'Desea Continuar'} do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %></td>

        </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @tratamientos %>
