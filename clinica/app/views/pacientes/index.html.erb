<br>
<div align= right>

  <%= form_tag(listar_paciente_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Rut Paciente" %>
   <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>

  <% end %>
</div><br>
<table class="table">
<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Pacientes</font>
  </a>

<tr>
  <td align= center>Nombre</td>
  <td align= center>Apellido Paterno</td>
  <td align= center>Rut</td>
  <td align= center>Telefono</td>


</tr>

    <% @pacientes.each do |a| %>
        <tr>
          <td align= center><%= a.nombre %></td>
          <td align= center><%= a.paterno%></td>
          <td align= center><%= a.rut %></td>
          <td align= center><%= a.telefono %></td>
          <td> <%= button_to 'Editar', editar_paciente_url(a), :class => "btn btn-primary" %></td>
          <td><%= button_to 'Detalles' ,paciente_url(a), :class => "btn btn-primary" %></td>
          <td> <%= button_to :Ficha, historial_paciente_url(a), :class => "btn btn-primary" %></td>
          <td><%= button_to a, :class => "btn btn-danger", method: :delete, data: {confirm: 'Desea Continuar'} do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %></td>
        </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @pacientes %>
