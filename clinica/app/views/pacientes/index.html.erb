
<table class="table">
<div class="list-group" >
  <a class="list-group-item active" >
    <font FACE= "roman" size= 12 align= center>Listado de Pacientes</font>
  </a>

<tr>
  <td align= center>Nombre</td>
  <td align= center>Apellido Paterno</td>
  <td align= center>Apellido Materno</td>
  <td align= center>Telefono</td>
  <td align= center>Rut</td>
  <td align= center>Edad</td>
  <td align= center>Sexo</td>
  <td align= center>Direccion</td>
  <td align= center>Comuna</td>
</tr>

    <% @pacientes.each do |a| %>
        <tr>
          <td align= center><%= a.nombre %></td>
          <td align= center><%= a.paterno%></td>
          <td align= center><%= a.materna%></td>
          <td align= center><%= a.telefono %></td>
          <td align= center><%= a.rut %></td>
          <td align= center><%= a.edad %></td>
          <td align= center><%= a.sexo %></td>
          <td align= center><%= a.direccion%></td>
          <td align= center><%= a.comuna.nombre%></td>

          <td><%= button_to 'Mostrar' ,paciente_url(a), :class => "btn btn-primary" %></td>
          <td> <%= button_to 'Editar', editar_paciente_url(a), :class => "btn btn-warning" %></td>
          <td><%= button_to 'Eliminar', a, :class => "btn btn-danger", method: :delete, data: {confirm: 'Desea Continuar'} %></td>

        </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @pacientes %>
