
  <%= form_for(@paciente, :html => {:role => 'form'}) do |f| %>
      <% if @paciente.errors.any? %>
          <%= pluralize(@paciente.errors.count, "error") %>

          <% @paciente.errors.full_messages.each do |actual| %>
              <%= actual %>
          <% end %>
      <% end %>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
      <%= f.label :apellidos %>
      <%= f.text_field :apellidos %>
      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
      <%= f.label :rut %>
      <%= f.text_field :rut %>
      <%= f.label :edad %>
      <%= f.text_field :edad %>
      <%= f.label :sexo%>
      <%= f.text_field :sexo%>
      <%= f.label :direccion %>
      <%= f.text_field :direccion%>
      <%= f.label :comuna %>
      <%= f.text_field :comuna %>
      <%= f.submit %>
  <% end %>
