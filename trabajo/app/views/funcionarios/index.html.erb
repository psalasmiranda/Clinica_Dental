<p id="notice"><%= notice %></p>

<h1>Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Comuna</th>
      <th>Direccion</th>
      <th>Sexo</th>
      <th>Edad</th>
      <th>Correo</th>
      <th>Profesion</th>
      <th>Contraseña</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.rut %></td>
        <td><%= funcionario.nombre %></td>
        <td><%= funcionario.apellido %></td>
        <td><%= funcionario.telefono %></td>
        <td><%= funcionario.comuna %></td>
        <td><%= funcionario.direccion %></td>
        <td><%= funcionario.sexo %></td>
        <td><%= funcionario.edad %></td>
        <td><%= funcionario.correo %></td>
        <td><%= funcionario.profesion %></td>
        <td><%= funcionario.contraseña %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

