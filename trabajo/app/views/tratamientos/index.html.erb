<p id="notice"><%= notice %></p>

<h1>Tratamientos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Costo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tratamientos.each do |tratamiento| %>
      <tr>
        <td><%= tratamiento.nombre %></td>
        <td><%= tratamiento.costo %></td>
        <td><%= tratamiento.descripcion %></td>
        <td><%= link_to 'Show', tratamiento %></td>
        <td><%= link_to 'Edit', edit_tratamiento_path(tratamiento) %></td>
        <td><%= link_to 'Destroy', tratamiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

